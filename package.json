{
  "name": "10k-scorekeeper-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "start:test": "dotenv -v TEST_ENV=dev -e .env.test.app -- expo start --port 8082 --clear",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='unit'",
    "test:security": "jest --testPathPattern='security'",
    "test:a11y": "jest --testPathPattern='accessibility'",
    "test:e2e": "npx playwright test --project=chromium",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:dev": "npx playwright test --project=dev-chromium",
    "test:e2e:responsive": "npx playwright test __tests__/e2e/responsive.test.ts --project=chromium",
    "test:e2e:theme": "npx playwright test __tests__/e2e/theme.test.ts --project=dev-chromium",
    "test:e2e:mobile": "run-maestro.bat test __tests__/e2e-mobile/flows/",
    "test:e2e:mobile:flow": "run-maestro.bat test",
    "test:e2e:mobile:record": "run-maestro.bat record __tests__/e2e-mobile/flows/",
    "test:e2e:mobile:studio": "run-maestro.bat studio",
    "test:compliance": "npm run test:security && npm run test:a11y",
    "test:all": "npm run test && npm run test:e2e",
    "test:all:full": "npm run test && npm run test:e2e:dev && npm run test:e2e:responsive"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@supabase/supabase-js": "^2.86.2",
    "babel-preset-expo": "~54.0.9",
    "expo": "~54.0.30",
    "expo-apple-authentication": "~8.0.8",
    "expo-auth-session": "~7.0.10",
    "expo-crypto": "~15.0.8",
    "expo-dev-client": "~6.0.20",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "~15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-url-polyfill": "^3.0.0",
    "react-native-web": "^0.21.0"
  },
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.11",
    "@types/react": "~19.1.10",
    "babel-jest": "^29.7.0",
    "babel-plugin-inline-dotenv": "^1.7.0",
    "babel-preset-expo": "^54.0.8",
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.16",
    "react-test-renderer": "19.1.0",
    "sharp": "^0.34.5",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@supabase/.*)"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/unit/**/*.test.{ts,tsx}",
      "**/__tests__/security/**/*.test.{ts,tsx}",
      "**/__tests__/accessibility/**/*.test.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  }
}
